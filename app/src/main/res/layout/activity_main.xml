<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/buttonSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="232dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Add Menu Item Button with Transparent Background Tint -->
        <Button
            android:id="@+id/buttonGoToAddMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#33FF5722"
            android:drawableLeft="@drawable/ic_add_menu"
            android:padding="16dp"
            android:text="Menu"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Order Activity Button -->
        <Button
            android:id="@+id/buttonGoToOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#33FF5722"
            android:drawableLeft="@drawable/ic_order"
            android:padding="16dp"
            android:text="Order"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Add Reservation Button -->
        <Button
            android:id="@+id/buttonGoToAddReservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#33FF5722"
            android:drawableLeft="@drawable/ic_reservation"
            android:padding="16dp"
            android:text="Reservation"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Delivery Button -->
        <Button
            android:id="@+id/buttonGoToDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#33FF5722"
            android:drawableLeft="@drawable/delivery_icon"
            android:padding="16dp"
            android:text="Delivery"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
