<resources>

    <!-- Base theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
    </style>

    <!-- Custom EditText Style -->
    <style name="CustomEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Primary Button Style -->
    <style name="PrimaryButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="SecondaryButton" parent="PrimaryButton">
        <item name="android:background">@drawable/button_secondary_background</item>
    </style>

</resources>
